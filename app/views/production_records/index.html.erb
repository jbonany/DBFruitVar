<div class='row'>
  <div class="col-md-9">
    <h4>Listing production records</h4>
  </div>
  <div class="col-md-3">
    <%= search_form_for @search, :html => {:class => "form-inline"} do |f| %> 
      <%= hidden_field_tag :per_page, @per_page %>
      <div class='form-group'>
        <div class='input-group'>
          <%= f.text_field  :block_accession_name_cont, :placeholder => 'Name contains', :class => "form-control input-sm" %>
          <span class='input-group-btn'>
            <button class="btn btn-sm btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
          </span>
        </div>
      </div>
      
    <% end %>
  </div>
</div>

<div class='row'>
  <div class="col-md-9">
    <div>
      <%= label_tag 'selectnumber', 'Show' %>
      <%= select_tag :per_page, options_for_select([10,15,20,50], @per_page.to_i), :onchange => "if(this.value){window.location='?per_page='+this.value;}"%>
      <%= label_tag 'entries', 'entries' %>
    </div>
  </div>
  <div class="col-md-3">
    <%= link_to 'New production record', new_production_record_path, :class => 'btn btn-xs btn-primary pull-right' %>
  </div>
</div>

<table class="table table-striped table-condensed ">
  <thead>
    <tr>
      <th><%= sort_link @search, :block_accession_name, "Accession name" %></th>
      <th><%= sort_link @search, :harvest_date, "Harvest date" %></th>
      <th><%= sort_link @search, :tree_number, "Tree number" %></th>
      <th><%= sort_link @search, :production, "Production" %></th>
      <th><%= sort_link @search, :c90, "C90" %></th>
      <th><%= sort_link @search, :c8590, "C8590" %></th>
      <th><%= sort_link @search, :c8085, "C8085" %></th>
      <th><%= sort_link @search, :c7580, "C7580" %></th>
      <th><%= sort_link @search, :c7275, "C7275" %></th>
      <th><%= sort_link @search, :c7072, "C7072" %></th>
      <th><%= sort_link @search, :c6870, "C6870" %></th>
      <th><%= sort_link @search, :c6568, "C6568" %></th>
      <th><%= sort_link @search, :c65, "C65" %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @production_records.each do |production_record| %>
      <tr>
        <td><%= production_record.block.accession.name %></td>
        <td><%= production_record.harvest_date %></td>
        <td><%= production_record.tree_number %></td>
        <td><%= production_record.production %></td>
        <td><%= production_record.c90 %></td>
        <td><%= production_record.c8590 %></td>
        <td><%= production_record.c8085 %></td>
        <td><%= production_record.c80 %></td>
        <td><%= production_record.c7580 %></td>
        <td><%= production_record.c7275 %></td>
        <td><%= production_record.c7072 %></td>
        <td><%= production_record.c6870 %></td>
        <td><%= production_record.c6568 %></td>
        <td><%= production_record.c65 %></td>
        <td><%= production_record.c6065 %></td>
        <td><%= production_record.c5560 %></td>
        <td><%= production_record.c55 %></td>
        <td><%= link_to 'Show', production_record,  :class => 'btn btn-xs btn-default ' %></td>
        <td><%= link_to 'Edit', edit_production_record_path(production_record) , :class => 'btn btn-xs btn-primary '  %></td>
        <td><%= link_to 'Destroy', production_record, :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-xs btn-danger ' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate @accessions, renderer: BootstrapPagination::Rails, class: 'pagination-sm' %>
