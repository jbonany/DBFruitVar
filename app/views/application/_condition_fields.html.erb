<fieldset class="fields condition" style="border: 1px solid #c0c0c0; padding: 1em;" data-object-name="<%= f.object_name %>">
  <legend class='h6' style = "border: none; width: inherit; padding: 0 10px;" >Condition <%= button_to_remove_fields "remove", f %></legend>
  <%= f.attribute_fields do |a| %>
    <%= render 'attribute_fields', f: a %>
  <% end %>

  <%= f.predicate_select %>
  <%= f.value_fields do |v| %>
    <%= render 'value_fields', f: v %>
  <% end %>
  <%= button_to_add_fields "Add Value", f, :value %>
</fieldset>