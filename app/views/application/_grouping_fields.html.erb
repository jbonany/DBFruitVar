<fieldset class="fields" style= "border: 1px solid #c0c0c0; padding: 1em;"data-object-name="<%= f.object_name %>">
  <legend class='h5' style = "border: none; width: inherit; padding: 0 10px;">Match <%= f.combinator_select %> conditions <%= button_to_remove_fields "remove", f %></legend>
  <%= f.condition_fields do |c| %>
    <%= render 'condition_fields', f: c  %>
  <% end %>
  <%= button_to_add_fields "Add Condition", f, :condition %>

  <%= f.grouping_fields do |g| %>
    <%= render 'grouping_fields', f: g   %>
  <% end %>
  <%= button_to_nest_fields "Add Condition Group", :grouping %>
</fieldset>